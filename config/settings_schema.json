[
	{
		"name": "theme_info",
		"theme_name": "RENO SOURCE",
		"theme_version": "1.0.0",
		"theme_author": "Bluedge USA",
		"theme_documentation_url": "https://shopify.github.io/core/",
		"theme_support_email": "nico@bluedgeusa.com"
	},
	{
		"name": "Theme Color",
		"settings": [
			{
				"type": "color",
				"id": "theme_light_color",
				"label": "Theme Light Mode Color",
				"default": "#1773B0"
			},
			{
				"type": "color",
				"id": "theme_dark_color",
				"label": "Theme Dark Mode Color",
				"default": "#5c636a"
			}
		]
	},
	{
		"name": "Favicon",
		"settings": [
			{
				"type": "image_picker",
				"id": "favicon",
				"label": "Favicon Image",
				"info": "Will be scaled down to 32 x 32px, this will be default if none provided from the branding settings"
			}
		]
	},
	{
		"name": "Quick Shop",
		"settings": [
			{
				"type": "checkbox",
				"id": "quickshop_enabled",
				"label": "Activate Quick Shop Popup",
				"default": false
			}
		]
	},
	{
		"name": "Gift Card",
		"settings": [
			{
				"type": "image_picker",
				"id": "gift_card_company_logo",
				"label": "Company logo to display in Gift Card Page"
			}
		]
	},
	{
		"name": "Search",
		"settings": [
			{
				"type": "checkbox",
				"id": "extended_search",
				"label": "Enable Extended Search",
				"info": "Display more advanced search results.",
				"default": true
			},
			{
				"type": "header",
				"content": "Articles"
			},
			{
				"type": "checkbox",
				"id": "show_search_articles",
				"label": "Enable Articles",
				"info": "Include Articles in search results.",
				"default": true
			},
			{
				"type": "header",
				"content": "Pages"
			},
			{
				"type": "checkbox",
				"id": "show_search_pages",
				"label": "Enable Pages",
				"info": "Include Pages in search results.",
				"default": true
			},
			{
				"type": "header",
				"content": "Search Suggestions"
			},
			{
				"type": "checkbox",
				"id": "show_search_suggestions",
				"label": "Enable Search Suggestions",
				"info": "Include Suggestions in search results."
			}
		]
	},
	{
		"name": "Product Grid",
		"settings": [
			{
				"type": "image_picker",
				"id": "no_image",
				"label": "Default Product Image",
				"info": "Will be used if a product image is missing."
			},
			{
				"type": "header",
				"content": "Grid Settings"
			},
			{
				"type": "range",
				"id": "product_description_truncate_word_count",
				"label": "Product description truncated words count",
				"min": 1,
				"max": 50,
				"step": 1,
				"info": "How many words ouf of the product description will show on the product grid items",
				"default": 13
			},
			{
				"type": "range",
				"id": "search_limit_by",
				"min": 1,
				"max": 50,
				"step": 1,
				"default": 24,
				"label": "Search Limit"
			}
		]
	},
	{
		"name": "Drawer Cart",
		"settings": [
			{
				"type": "header",
				"content": "Upsell carousel"
			},
			{
				"type": "checkbox",
				"id": "drawer_cart_upsell_enable",
				"label": "Enable Drawer Cart Upsell",
				"default": true
			},
			{
				"type": "text",
				"id": "drawer_cart_upsell_title",
				"label": "Drawer Cart Upsell Heading"
			},
			{
				"type": "product_list",
				"id": "drawer_cart_upsell_fallback_product_list",
				"label": "Drawer Cart Upsell Fallback product list",
				"info": "This list is used when no products in the current drawer cart have no up-sell products to show",
				"limit": 20
			},
			{
				"type": "header",
				"content": "Settings"
			},
			{
				"type": "text",
				"id": "checkout_btn_copy",
				"label": "Checkout Button Text",
				"default": "Cart"
			},
			{
				"type": "image_picker",
				"id": "drawer_cart_empty_image",
				"label": "Drawer cart empty image"
			}
		]
	},
