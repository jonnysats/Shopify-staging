{%- if block.settings.heading != blank or block.settings.copy != blank -%}
	<div class="block-heading-with-copy" {{ block.shopify_attributes }}>
		{%- if block.settings.heading != blank -%}
			<{{ block.settings.heading_type }}{% if block.settings.heading_type != "p" %} class="block-heading-with-copy-title"{% endif %}>{{ block.settings.heading }}</{{ block.settings.heading_type }}>
		{%- endif -%}
		{%- if block.settings.copy != blank -%}
			<p class="mb-0">{{ block.settings.copy }}</p>
		{%- endif -%}
	</div>
{%- endif -%}
{% schema %}
{
	"name": "Heading with copy",
	"tag": null,
	"settings": [
		{
			"type": "header",
			"content": "Copy"
		},
		{
			"type": "select",
			"id": "heading_type",
			"label": "Heading type",
			"options": [
				{
					"value": "p",
					"label": "Paragraph"
				},
				{
					"value": "h1",
					"label": "Heading 1"
				},
				{
					"value": "h2",
					"label": "Heading 2"
				},
				{
					"value": "h3",
					"label": "Heading 3"
				},
				{
					"value": "h4",
					"label": "Heading 4"
				},
				{
					"value": "h5",
					"label": "Heading 5"
				},
				{
					"value": "h6",
					"label": "Heading 6"
				},
			],
			"default": "p"
		},
		{
			"type": "text",
			"id": "heading",
			"label": "Header"
		},
		{
			"type": "inline_richtext",
			"id": "copy",
			"label": "copy"
		}
	],
	"presets": [
		{
			"name": "Heading with copy"
		}
	]
}
{% endschema %}