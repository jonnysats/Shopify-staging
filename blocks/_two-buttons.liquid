{%- if block.settings.link != blank and block.settings.title != blank -%}
	<div class="col button-wrapper"{{ block.shopify_attributes }}>
		<a href="{{ block.settings.link }}" class="btn w-100 btn-lg-long btn-{{ block.settings.button_style }}" title="{{ block.settings.title | escape }}">
			<span class="anim-wrapper">
				<span class="initial">{{ block.settings.title }}</span>
				<span class="end">{{ block.settings.title }}</span>
			</span>
		</a>
	</div>
{%- endif -%}
{% schema %}
{
	"name": "Buttons",
	"tag": null,
	"settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Link Copy"
		},
		{
			"type": "url",
			"id": "link",
			"label": "Link"
		},
		{
			"type": "select",
			"id": "button_style",
			"label": "Button Style",
			"options": [
				{
					"value": "primary",
					"label": "Primary"
				},
				{
					"value": "outline-primary",
					"label": "Outline"
				},
				{
					"value": "secondary",
					"label": "Secondary"
				},
				{
					"value": "outline-secondary",
					"label": "Outline Secondary"
				},
				{
					"value": "ternary",
					"label": "Tertiary"
				}
			],
			"default": "primary"
		}
	],
	"presets": [
		{
			"name": "Buttons"
		}
	]
}
{% endschema %}