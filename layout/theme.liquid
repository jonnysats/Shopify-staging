<!DOCTYPE html>
<html class="no-js supports-no-cookies" lang="{{ request.locale.iso_code }}">
	<head>
		{%- comment -%} Preconnect Google fonts {%- endcomment -%}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		{%- comment -%} Load Google font with preload {%- endcomment -%}
		{%- # theme-check-disable -%}
		<link rel="preload" href="https://fonts.googleapis.com/css2?family=Figtree:wght@400;500;600&display=optional" as="style" onload="this.onload=null;this.rel='stylesheet'"/>
		{% # theme-check-enable %}
		<noscript>
			<link href="https://fonts.googleapis.com/css2?family=Figtree:wght@400;500&display=optional" rel="stylesheet" type="text/css" crossorigin/>
		</noscript>
		{%- liquid
			comment
			# Store metadata attributes
			endcomment
			render 'metadata'

			comment
			# Inline CSS
			endcomment
			render 'inline-css'
		-%}
		{%- if template contains "customers" -%}
			{%- # theme-check-disable -%}
			{{ "shopify_common.js" | shopify_asset_url | script_tag }}
			{{ "customer_area.js"  | shopify_asset_url | script_tag }}
			{% # theme-check-enable %}
		{%- endif -%}
		{{ 'bootstrap.css' | asset_url | stylesheet_tag: preload: true }}
		{{ 'theme.css' | asset_url | stylesheet_tag: preload: true }}
		{%- comment -%} Main product grid styles {%- endcomment -%}
		{{ 'product-grid.css' | asset_url | stylesheet_tag: preload: true }}
		{{ 'flickity.css' | asset_url | stylesheet_tag: preload: true }}
		<!-- THEME SETTINGS -->
		{%- render 'theme-settings' -%}
		<script src="{{ 'bootstrap.js' | asset_url }}" defer crossorigin="anonymous"></script>
		<script src="{{ 'vanilla-lazyload.js' | asset_url }}" defer crossorigin="anonymous"></script>
		{{ content_for_header }}
		<script src="{{ 'theme.js' | asset_url }}" defer crossorigin="anonymous"></script>
		<link rel="stylesheet" href="{{ 'swish-buttons.css' | asset_url }}" />
	</head>
	<body id="{{ page_title | handle }}" class="template-{{ template.name | handleize }}{% if template.suffix != blank %} template-{{ template.suffix | handleize }}{% endif %}{% if request.design_mode == true %} theme-design-mode{% endif %}">

      {%- liquid

			comment
			# Quickshop Modal HTML
			endcomment
			render 'quickshop-modal'

			comment
			# Shop the Look HTML
			endcomment
			render 'shop-the-look-off-canvas'
			comment

			# Header navigation bar HTML
			endcomment
			sections 'header-group'
		-%}
		<main>{{ content_for_layout }}</main>
		{%- liquid
			comment
			# Footer navigation HTML
			endcomment
			sections 'footer-group'

			comment
			# Bootstrap Toast Alert HTML
			endcomment
			render 'toast-alert'

			comment
			# Vanilla lazyload scripts
			endcomment
			render 'vanilla-lazyload'
		-%}
		{%- comment -%} DEFER CSS {%- endcomment -%}
		<link rel="stylesheet" href="{{ 'drawer-cart.css' | asset_url }}" media="print" onload="this.media='all'">
		<link rel="stylesheet" href="{{ 'unfold.css' | asset_url }}" media="print" onload="this.media='all'">
		{%- comment -%} Defer user-interaction product grid styles {%- endcomment -%}
		<link rel="stylesheet" href="{{ 'product-grid-interactions.css' | asset_url }}" media="print" onload="this.media='all'">
		<link rel="stylesheet" href="{{ 'animations.css' | asset_url }}" media="print" onload="this.media='all'">

      {% comment %} Roney added to remove video from playing for now
      {% if template.name == 'index' %}
  <div class="custom-video-background">
    <video autoplay muted loop playsinline>
      <source src="https://cdn.shopify.com/videos/c/o/v/50e07db9876d4d2b970bdade074e4c5c.mp4" type="video/mp4">
    </video>
  </div>
{% endif %}
{% endcomment %}
	</body>
