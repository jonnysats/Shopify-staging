<!doctype html>
<html class="no-js supports-no-cookies" lang="{{ request.locale.iso_code }}">
	<head>
		{%- comment -%} Preconnect Google fonts {%- endcomment -%}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		{%- comment -%} Load Google font with preload {%- endcomment -%}
		{%- # theme-check-disable -%}
		<link rel="preload" href="https://fonts.googleapis.com/css2?family=Figtree:wght@400;500;600&display=optional" as="style" onload="this.onload=null;this.rel='stylesheet'"/>
		{% # theme-check-enable %}
		<noscript>
			<link href="https://fonts.googleapis.com/css2?family=Figtree:wght@400;500&display=optional" rel="stylesheet" type="text/css" crossorigin/>
		</noscript>
		{%- liquid
			comment
			# Store metadata attributes
			endcomment
			render 'metadata'

			comment
			# Inline CSS
			endcomment
			render 'inline-css'
		-%}
		{{ 'bootstrap.css' | asset_url | stylesheet_tag: preload: true }}
		{{ 'theme.css' | asset_url | stylesheet_tag: preload: true }}
		<!-- THEME SETTINGS -->
		{%- render 'theme-settings' -%}
		<script src="{{ 'bootstrap.js' | asset_url }}" defer crossorigin="anonymous"></script>
		<script src="{{ 'vanilla-lazyload.js' | asset_url }}" defer crossorigin="anonymous"></script>
		{{ content_for_header }}
		<script src="{{ 'theme.js' | asset_url }}" defer crossorigin="anonymous"></script>
	</head>
	<style>
		{% comment %}
			Prevent body scrolling when fullscreen video is active
		{% endcomment %}
		body:has(.section-video-banner .fullscreen),
		html:has(.section-video-banner .fullscreen) {
			overflow: hidden;
			position: fixed;
			width: 100%;
			height: 100%;
			-webkit-overflow-scrolling: none;
			overscroll-behavior: none;
		}

		{% comment %}
			Also prevent scrolling on main element when fullscreen is active
		{% endcomment %}
		main:has(.section-video-banner .fullscreen) {
			overflow: hidden;
			height: 100vh;
		}
	</style>
	<body id="{{ page_title | handle }}" class="position-relative template-{{ template.name | handleize }}{% unless template.name contains 'password' %} pb-2{% endunless %}{% if template.suffix != blank %} template-{{ template.suffix | handleize }}{% endif %}{% if request.design_mode == true %} theme-design-mode{% endif %}">
		<main>
			{%- comment -%} BG IMG {%- endcomment -%}
			{%- if settings.password_bg != blank -%}
				{%- if settings.pass_overlay == true and settings.pass_overlay_color != blank -%}<div class="overlay" style="background-color: {{ settings.pass_overlay_color }}; opacity: {{ settings.psas_overlay_opacity | divided_by: 100.0 }};"></div>{%- endif -%}
				{%- render 'responsive-bg-image' image: settings.password_bg, image_attributes: 'data-main-bg' -%}
			{%- endif -%}
			{%- comment -%}
				{%- comment -%} LOGO {%- endcomment -%}
				<div class="container p-3 px-lg-4 py-lg-5">
					<div class="row justify-content-center">
						<div class="col-4 col-lg-2">
							<div class="logo">{%- render 'reno-logo-alt-svg' -%}</div>
						</div>
					</div>
				</div>
			{%- endcomment -%}
			{{ content_for_layout }}
		</main>
		{%- liquid
			comment
			# Bootstrap Toast Alert HTML
			endcomment
			render 'toast-alert'

			comment
			# Vanilla lazyload scripts
			endcomment
			render 'vanilla-lazyload'
		-%}
		{%- comment -%} DEFER CSS {%- endcomment -%}
		<link rel="stylesheet" href="{{ 'unfold.css' | asset_url }}" media="print" onload="this.media='all'">
		{%- comment -%} Defer user-interaction product grid styles {%- endcomment -%}
		<link rel="stylesheet" href="{{ 'animations.css' | asset_url }}" media="print" onload="this.media='all'">
	</body>
