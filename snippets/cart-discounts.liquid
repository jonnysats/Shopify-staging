{%- comment -%}
	Renders the total percentage discounted and a list of discounts applied to cart

	Usage:
		{%- render 'cart-discounts' -%}

{%- endcomment -%}
{%- if cart.discount_applications.size > 0 -%}
	<div class="d-flex justify-content-between align-items-start pb-2 pb-lg-3 gap-3">
		<div class="d-flex flex-row flex-wrap flex-shrink-1 gap-2 align-items-center w-100">
			<p class="fs-5 fw-medium mb-0">{{ 'cart.general.discount' | t }}</p>
			{%- render 'cart-discount-list' -%}
		</div>
		{%- liquid	 
			assign total_discount = cart.total_discount | times: 1.0
			assign total_price = cart.total_price | times: 1.0
		
			assign total_discount_percentage = total_discount | divided_by: total_price | times: 100.0 | round
		-%}
		<p class="cart-discount-total fs-5 fw-medium text-danger mb-0 flex-grow-1 text-end w-100"><span class="me-1">-{{ cart.total_discount | money }}</span><span>({{ total_discount_percentage }}% {{ 'cart.drawer.off' | t }})</span></p>
	</div>
{%- endif -%}