<script src="{{ 'product.js' | asset_url }}" defer crossorigin="anonymous"></script>
{{ 'product.css' | asset_url | stylesheet_tag }}
{{ 'product-form.css' | asset_url | stylesheet_tag }}
{%- assign current_variant = product.selected_or_first_available_variant -%}
<div data-section-id="{{ section.id }}" data-section-type="product" data-exclude-extra-images="{{ product.metafields.theme.hide_non_variant_images.value }}" data-use-custom-selectors="true" data-enable-history-state="true" data-pre-order="{{ product.metafields.theme.preorder.value | default: false }}">
	<div id="productContainer" class="container-xl mt-3 mt-lg-4 pt-lg-3">
		<div class="row gx-lg-custom">
			{%- comment -%} For Gallery Block this will be on top on desktop always, it will not reorder {%- endcomment -%}
			{%- assign gallery_block = section.blocks | find: 'type', 'gallery' -%}
			{%- if gallery_block != blank -%}
				<div class="col-lg-6 d-none d-lg-block">
					<div class="row flex-column align-items-center gallery-wrapper py-0" {{ gallery_block.shopify_attributes }}>
						{%- render 'product-gallery' with product as product, alt_version: false, version: 'desktop' -%}
					</div>
				</div>
			{%- endif -%}

			<div class="col-12 col-lg-6">
				{%- render 'product-form' with product as product,
					current_variant: current_variant,
					combined_listing_template: false,
					alternate: false,
					preorder: product.metafields.theme.preorder.value
				-%}
			</div>
		</div>
		<script type="application/json" data-product-json>{{ product | json }}</script>
{% comment %}
 {% if product.metafields.custom.video_url %}
  <div class="row align-items-center mt-5">
    <!-- Left column: dynamic description -->
    <div class="col-md-6 text-center px-4">
      {% if product.metafields.custom.video_description %}
        <div class="product-video-description" style="font-size: 1.1rem; line-height: 1.6;">
          <h3 style="font-weight: 600; margin-bottom: 1rem;">See It In Action</h3>
          <p>{{ product.metafields.custom.video_description }}</p>
        </div>
      {% endif %}
    </div>

    <!-- Right column: video -->
    <div class="col-md-6 text-center px-4">
      <video autoplay muted loop playsinline
        style="width: 100%; max-width: 500px; height: auto; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
        <source src="{{ product.metafields.custom.video_url }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    </div>
  </div>
{% endif %}
{% endcomment %}
		{%- comment -%} Render variant inventory quantities {%- endcomment -%}
		{%- render 'variants-extra-data', with product as product -%}
	</div><!-- .container -->
</div>
