						{
							"value": "primary",
							"label": "Primary"
						},
						{
							"value": "outline-primary",
							"label": "Outline"
						}
					],
					"default": "outline-primary"
				}
			]
		}
 	],
	"presets": [
		{
			"name": "Intro Section",
			"blocks": [
				{
					"type": "links"
				}
			]
		}
	]
}
{% endschema %}