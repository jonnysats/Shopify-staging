{%- liquid 	
	render 'section-padding', padding_amount_top: section.settings.padding_amount_top, padding_amount_bottom: section.settings.padding_amount_bottom

	assign alignment_mobile = section.settings.alignment_mobile | replace: 'left', 'start' | replace: 'right', 'end'
	assign alignment_desktop = section.settings.alignment_desktop | replace: 'left', 'start' | replace: 'right', 'end'
-%}
{%- if section.settings.heading != blank or section.settings.copy != blank or section.blocks.size > 0 -%}
	<div class="container">
		<div class="row py-4 justify-content-{{ section.settings.horizontal_alignment_mobile }} justify-content-lg-{{ section.settings.horizontal_alignment_desktop }}">
			<div class="col col-lg-9">
				<div class="copy-wrapper text-{{ alignment_mobile }} text-lg-{{ alignment_desktop }}">
					{%- if section.settings.heading != blank -%}
						{%- if section.settings.is_h1 == true -%}
							<h1 class="d-lg-none">{{ section.settings.heading }}</h1>
							<h1 class="h2 d-none d-lg-block">{{ section.settings.heading }}</h1>
						{%- else -%}
							<h2 class="h1 d-lg-none">{{ section.settings.heading }}</h2>
							<h2 class="d-none d-lg-block">{{ section.settings.heading }}</h2>
						{%- endif -%}
					{%- endif -%}
					{%- if section.settings.copy != blank -%}
						<div class="mt-4 pt-lg-1">
							<p class="mb-0">{{ section.settings.copy }}</p>
						</div>
					{%- endif -%}
				</div>
				{%- comment -%} Buttons {%- endcomment -%}
				{%- if section.blocks.size > 0 -%}
					<div class="row row-cols-1 row-cols-lg-auto g-2 pt-2 pt-lg-3 justify-content-{{ alignment_mobile }} justify-content-lg-{{ alignment_desktop }}">
						{%- for block in section.blocks -%}
							{%- if block.settings.title != blank and block.settings.link != blank -%}
								<div class="col pt-2 pt-lg-3"{{ block.shopify_attributes }} {{ block.shopify_attributes }}>
									<a href="{{ block.settings.link }}" class="btn w-100 btn-lg-long btn-{{ block.settings.button_style }}" title="{{ block.settings.title | escape }}">
										<span class="anim-wrapper">
											<span class="initial">{{ block.settings.title }}</span>
											<span class="end">{{ block.settings.title }}</span>
										</span>
									</a>
								</div>
							{%- endif -%}
						{%- endfor -%}
					</div>
				{%- endif -%}
			</div>
		</div>
	</div>
{%- endif -%}

{% schema %}
{
	"name": "Intro Section",
	"tag": "section",
	"class": "section-intro-section",
	"settings": [
		{
			"type": "header",
			"content": "Layout"
		},
