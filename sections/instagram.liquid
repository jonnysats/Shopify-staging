{%- if section.settings.heading != blank or section.settings.html != nil -%}
	{%- render 'section-padding', padding_amount_top: section.settings.padding_amount_top, padding_amount_bottom: section.settings.padding_amount_bottom -%}
	<style>
		.section-instagram svg { width: 22px; }
		.section-instagram svg path { stroke: var(--bs-primary); }
	</style>
	<div class="container">
		<div class="row gy-3 row-cols-1 justify-content-center text-center">
		{%- if section.settings.heading != blank or section.settings.copy != blank -%}
			<div class="col-12 col-lg-6 col-xl-5">
				{%- if section.settings.heading != blank -%}
					<h2>{{ section.settings.heading }}</h2>
				{%- endif -%}
				{%- if section.settings.copy != blank -%}
					<div class="copy-wrapper">
						<p>{{ section.settings.copy }}</p>
					</div>
				{%- endif -%}
			</div>
		{%- endif -%}
		{%- if section.settings.html != nil -%}
			<div class="col-12">{{ section.settings.html }}</div>
		{%- endif -%}
		{%- if section.settings.btn_copy != blank and section.settings.link != blank -%}
			<div class="col-12">
				<a href="{{ section.settings.link }}" class="btn btn-outline-primary">
					<span class="display-inline-block me-2">{%- render 'icons' with 'instagram' -%}</span>
					<span class="anim-wrapper">
						<span class="initial">{{ section.settings.btn_copy }}</span>
						<span class="end">{{ section.settings.btn_copy }}</span>
					</span>
				</a>
			</div>
		{%- endif -%}
		</div>
	</div>
{%- endif -%}
{% schema %}
{
	"name": "Instagram",
	"tag": "section",
	"class": "section-instagram",
	"settings": [
		{
			"type": "text",
			"id": "heading",
			"label": "Heading"
		},
		{
			"type": "inline_richtext",
			"id": "copy",
			"label": "Copy"
		},
		{
			"type": "html",
			"id": "html",
			"label": "Code from the IG App"
		},
		{
			"type": "text",
			"id": "btn_copy",
			"label": "Button copy"
		},
		{
			"type": "url",
			"id": "link",
			"label": "Link"
		},
		{
			"type": "header",
			"content": "Section Settings"
		},
		{
			"type": "select",
			"id": "padding_amount_top",
			"label": "Top Section Padding",
			"options": [
				{
					"value": "no",
					"label": "None"
				},
				{
					"value": "small",
					"label": "Small"
				},
				{
					"value": "default",
					"label": "Medium (Default)"
				},
				{
					"value": "large",
					"label": "Large"
				},
				{
					"value": "xlarge",
					"label": "Extra Large"
				}
			],
			"default": "default"
		},
		{
			"type": "select",
			"id": "padding_amount_bottom",
			"label": "Bottom Section Padding",
			"options": [
				{
					"value": "no",
					"label": "None"
				},
				{
					"value": "small",
					"label": "Small"
				},
				{
					"value": "default",
					"label": "Medium (Default)"
				},
				{
					"value": "large",
					"label": "Large"
				},
				{
					"value": "xlarge",
					"label": "Extra Large"
				}
			],
			"default": "default"
		}
	],
	"presets": [
		{
			"name": "Instagram"
		}
	]
}
{% endschema %}