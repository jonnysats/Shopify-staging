{%- render 'section-padding', padding_amount_top: section.settings.padding_amount_top, padding_amount_bottom: section.settings.padding_amount_bottom -%}
{{ 'trade-program.css' | asset_url | stylesheet_tag }}
<div class="container">
	<div class="row row-cols-1 row-cols-lg-2 gy-4">
		{%- if section.settings.image != blank -%}
			<div class="col pe-lg-0">
				{%- render 'responsive-image',
					image: section.settings.image,
					image_class: 'img-fluid' 
				-%}
			</div>
		{%- endif -%}
		{%- if section.settings.heading != blank -%}
			<div class="col{% if section.settings.image != blank %} ps-lg-6 ps-xl-7{% endif %}">
				<div class="copy-wrapper pt-2 pt-lg-0">
					<h2 class="mb-3 mb-lg-4">{{ section.settings.heading }}</h2>
					{%- if section.settings.subheading != blank -%}
						<h3 class="h4">{{ section.settings.subheading }}</h3>
					{%- endif -%}
					{%- if section.settings.copy != blank -%}
						<p class="mb-lg-2">{{ section.settings.copy }}</p>
					{%- endif -%}
				</div>
				{%- comment -%} Perks list {%- endcomment -%}
				{%- if section.blocks.size > 0 -%}
					<ul class="list-group list-group-flush perks mb-4 pb-2">
						{%- for  block in section.blocks -%}
							{%- if block.settings.title != blank -%}
								<li class="list-group-item" {{ block.shopify_attributes }}>
									<span class="icon">{%- render 'icons' with 'tick' -%}</span><span>{{ block.settings.title }}</span>
								</li>
							{%- endif -%}
						{%- endfor -%}
					</ul>
				{%- endif -%}
				{%- comment -%} Button {%- endcomment -%}
				{%- if section.settings.link_copy != blank and section.settings.url != blank -%}
					<a class="btn btn-primary" href="{{ section.settings.url }}" title="{{ section.settings.heading }}: {{ section.settings.link_copy | escape }}">
						<span class="anim-wrapper">
							<span class="initial">{{ section.settings.link_copy }}</span>
							<span class="end">{{ section.settings.link_copy }}</span>
						</span>
					</a>
				{%- endif -%}
			</div>
		{%- endif -%}
	</div>
</div>
{% schema %}
{
	"name": "Trade Program",
	"tag": "section",
	"class": "section-trade-program",
	"settings": [
		{
			"type": "image_picker",
			"id": "image",
			"label": "Image"
		},
		{
			"type": "text",
			"id": "heading",
			"label": "Heading"
		},
		{
			"type": "text",
			"id": "subheading",
			"label": "Subheading"
		},
		{
			"type": "inline_richtext",
			"id": "copy",
			"label": "Copy"
		},
		{
			"type": "text",
			"id": "link_copy",
			"label": "Button copy",
		},
		{
			"type": "url",
			"id": "url",
			"label": "Link"
		},
		{
			"type": "header",
			"content": "Section Settings"
		},
		{
			"type": "select",
			"id": "padding_amount_top",
			"label": "Top Section Padding",
			"options": [
				{
					"value": "no",
					"label": "None"
				},
				{
					"value": "small",
					"label": "Small"
				},
				{
					"value": "default",
					"label": "Medium (Default)"
				},
				{
					"value": "large",
					"label": "Large"
				},
				{
					"value": "xlarge",
					"label": "Extra Large"
				}
			],
			"default": "default"
		},
		{
			"type": "select",
			"id": "padding_amount_bottom",
			"label": "Bottom Section Padding",
			"options": [
				{
					"value": "no",
					"label": "None"
				},
				{
					"value": "small",
					"label": "Small"
				},
				{
					"value": "default",
					"label": "Medium (Default)"
				},
				{
					"value": "large",
					"label": "Large"
				},
				{
					"value": "xlarge",
					"label": "Extra Large"
				}
			],
			"default": "default"
		}
	],
	"blocks": [
		{
			"type": "perk",
			"name": "Perk",
			"settings": [
				{
					"type": "inline_richtext",
					"id": "title",
					"label": "Perk"
				}
			]
		}
	],
	"presets": [
		{
			"name": "Trade Program",
			"blocks": [
				{
					"type": "perk"
				}
			]
		}
	]
}
{% endschema %}