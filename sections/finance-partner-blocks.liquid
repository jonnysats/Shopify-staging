{%- if section.blocks.size > 0 -%}
	{%- render 'section-padding', padding_amount_top: section.settings.padding_amount_top, padding_amount_bottom: section.settings.padding_amount_bottom -%}
	{{ 'finance-partner-blocks.css' | asset_url | stylesheet_tag }}
	<div class="container pt-4 pb-5 mb-2 pt-lg-5 pb-lg-6 my-lg-3">
		<div class="row justify-content-center g-lg-6">
			{%- content_for 'blocks' -%}
		</div>
	</div>
{%- endif -%}
{% schema %}
{
	"name": "Finance Partners",
	"class": "finance-partners-section",
	"tag": "section",
	"settings": [
		{
			"type": "header",
			"content": "Section Settings"
		},
		{
			"type": "select",
			"id": "padding_amount_top",
			"label": "Top Section Padding",
			"options": [
				{
					"value": "no",
					"label": "None"
				},
				{
					"value": "small",
					"label": "Small"
				},
				{
					"value": "default",
					"label": "Medium (Default)"
				},
				{
					"value": "large",
					"label": "Large"
				},
				{
					"value": "xlarge",
					"label": "Extra Large"
				}
			],
			"default": "default"
		},
		{
			"type": "select",
			"id": "padding_amount_bottom",
			"label": "Bottom Section Padding",
			"options": [
				{
					"value": "no",
					"label": "None"
				},
				{
					"value": "small",
					"label": "Small"
				},
				{
					"value": "default",
					"label": "Medium (Default)"
				},
				{
					"value": "large",
					"label": "Large"
				},
				{
					"value": "xlarge",
					"label": "Extra Large"
				}
			],
			"default": "default"
		}
	],
	"blocks": [
		{ "type": "_finance-partner-block" }
 	],
	"presets": [
		{
			"name": "Finance Partners"
		}
	]
}
{% endschema %}